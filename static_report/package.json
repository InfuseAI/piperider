{
  "name": "piperider-report",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@chakra-ui/icons": "^2.0.1",
    "@chakra-ui/react": "^2.1.2",
    "@chakra-ui/styled-system": "^2.1.1",
    "@chakra-ui/system": "^2.1.1",
    "@chakra-ui/theme-tools": "^2.0.1",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "d3": "^7.4.4",
    "date-fns": "^2.28.0",
    "framer-motion": "^6.3.4",
    "nanoid": "^3.3.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start:single": "REACT_APP_SINGLE_REPORT=true react-scripts start",
    "start:compare": "REACT_APP_SINGLE_REPORT=false react-scripts start",
    "build:single": "REACT_APP_SINGLE_REPORT=true react-scripts build && mv build ../piperider_cli/data/report/single-report",
    "build:compare": "REACT_APP_SINGLE_REPORT=false react-scripts build && mv build ../piperider_cli/data/report/comparison-report",
    "build:all": "npm run cleanup && npm run build:single && npm run build:compare",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cleanup": "rimraf ../piperider_cli/data/report/single-report && rimraf ../piperider_cli/data/report/comparison-report"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "rimraf": "^3.0.2"
  }
}
